<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/iv_cart_food_image"
                android:layout_width="100dp"
                android:layout_height="50dp"/>

            <TextView
                android:id="@+id/tv_cart_food_name"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="name"
                android:textSize="24sp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="数量"
                android:textSize="18sp"
                android:lineSpacingExtra="10sp"
                android:textAlignment="center"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/ibt_cart_food_number_minus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/food_cart_minus"
                    android:scaleType="fitXY"/>
                <TextView
                    android:id="@+id/tv_cart_food_number"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textSize="18sp"
                    android:text="999"
                    android:lineSpacingExtra="10sp"/>
                <ImageButton
                    android:id="@+id/ibt_cart_food_number_plus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/food_cart_plus"
                    android:scaleType="fitXY"/>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="价格"/>
                <TextView
                    android:id="@+id/tv_cart_food_price"
                    android:layout_width="80dp"
                    android:layout_height="50dp"/>
                <ImageButton
                    android:id="@+id/bt_cart_clear"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/food_cart_clear"
                    android:scaleType="fitXY"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>